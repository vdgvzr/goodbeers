{% extends "index.twig" %}

{% block content %}
    {% set products = craft.entries.section('products').all() %}

    <section>
        <div class="container hero-conent">
            <div class="row row-cols-1 row-cols-md-3 g-4">
            {% for product in products %}
                <div class="col">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ product.beerName }}</h5>

                            <p>{{ product.abv }}</p>

                            <a href="{{ product.slug }}" class="card-link">Card link</a>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}