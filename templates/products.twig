{% extends "index.twig" %}

{% block content %}
    {% set products = entry.products.all() %}

    <section>
        <div class="container hero-conent">
            <div class="row row-cols-1 row-cols-md-3 g-4">
            {% for product in products %}
                <div class="col">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ product.beer }}</h5>

                            <p class="card-text">{{ product.notes }}</p>

                            <h6 class="card-subtitle mb-2">Pair With:</h6>

                            <p class="card-text">{{ product.pairings }}</p>

                            <a href="#" class="card-link">Card link</a>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}