{% extends "index.twig" %}

{% block content %}
    {% set products = entry.products.all() %}

    <section>
        <div class="hero-content">
            <div class="container text-center">
                <div class="row">
                    <div class="col-3"></div>

                    <div class="col-6">
                        {% for product in products %}
                            <p class="text-white">{{ product.beer }}</p>
                        {% endfor %}
                    </div>

                    <div class="col-3"></div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}